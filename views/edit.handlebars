<div class="container d-flex justify-content-center">
  <div class="form">
    <form action="/restaurants/{{restaurant._id}}/edit" method="POST">
      <h3>* 餐廳內容編輯 *</h3>

      <div class="form-group">
        <label for="name">餐廳名稱 :</label>
        <input type="text" placeholder="請輸入餐廳名稱 ..." id="name" name="name" value="{{restaurant.name}}"
          style="border: none;" required>
      </div>

      <div class="form-group">
        <label for="name_en">英文名 :</label>
        <input type="text" placeholder="請輸入餐廳英文名 ..." id="name_en" name="name_en" value="{{restaurant.name_en}}"
          style="border: none;" required>
      </div>

      <div class="form-group">
        <label for="category">類別 :</label>
        <input list="categories" id="category" name="category" placeholder="請輸入餐廳類別 ..." value="{{restaurant.category}}"
          style="border: none;" required>
        <datalist id="categories">
          <option>美式餐廳</option>
          <option>義式餐廳</option>
          <option>日本料理</option>
          <option>中東料理</option>
          <option>咖啡</option>
          <option>酒吧</option>
        </datalist>
      </div>

      <div class="form-group">
        <label for="image">圖檔連結 :</label>
        <input type="url" id="image" name="image" value="{{restaurant.image}}" style="border: none; width: 600px;"
          required>
      </div>

      <div class="form-group">
        <label for="location">地址 :</label>
        <input type="text" placeholder="請輸入餐廳地址 ..." id="location" name="location" value="{{restaurant.location}}"
          style="border: none; width: 500px;" required>
      </div>

      <div class="form-group">
        <label for="phone">電話 :</label>
        <input type="tel" placeholder="請輸入餐廳電話 ..." id="phone" name="phone" value="{{restaurant.phone}}"
          style="border: none;" required>
      </div>

      <div class="form-group">
        <label for="google-map">Google Map連結 :</label>
        <input type="url" id="google-map" name="google-map" value="{{restaurant.google_map}}"
          style="border: none; width: 600px;" required>
      </div>

      <div class="form-group">
        <label for="rating">評分 :</label>
        <input type="number" step="0.1" min="0" max="5" placeholder="0 ~ 5" id="rating" name="rating"
          value="{{restaurant.rating}}" style="border: none;" required>
      </div>

      <div class="form-group d-flex flex-column">
        <label for="description">簡介 :</label>
        <textarea name="description" id="description" placeholder="餐廳簡介 ..." cols="50" rows="3"
          required>{{restaurant.description}}</textarea>
      </div>

      <button type="submit">Save</button>
      <a href="/"><button type="button">Back</button></a>
    </form>

  </div>
</div>