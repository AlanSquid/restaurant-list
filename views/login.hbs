<div class="container login-bar">
  <div class="login-bar-outer">
    <div class="login-bar-inner">
      <h4 class="mb-2">Login</h4>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="login-form">
          <div class="login-input-group d-flex flex-column mb-3">
            <label for="email" class="mb-1">電子信箱:</label>
            <input type="text" placeholder="Email" name="email" id="email">
          </div>
          <div class="login-input-group d-flex flex-column mb-3">
            <label for="password" class="mb-1">密碼:</label>
            <input type="password" placeholder="Password" name="password" id="password">
          </div>
          <div class="login-btn-group d-flex flex-column align-items-center">
            <div class="third-party">
              <a href="/auth/facebook" class="btn">
                <i class="fb-btn fa-brands fa-square-facebook fa-lg"></i>
              </a>
              <a href="/auth/google" class="btn">
                <i class="g-btn fa-brands fa-square-google-plus fa-lg"></i>
              </a>
            </div>

            <button type="submit" class="login-btn btn btn-major">Login</button>
          </div>



        </div>
      </form>
      <p class="lead mt-4">
        新用戶請先註冊 <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>