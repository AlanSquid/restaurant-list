<div class="container register-bar">
  <div class="register-bar-outer">
    <div class="register-bar-inner">
      <h4 class="mb-2">Register</h4>
      {{> message}}
      <form action="/users/register" method="POST">
        <div class="register-form">
          <div class="register-input-group d-flex flex-column mb-3">
            <label for="name" class="mb-1">使用者名稱:</label>
            <input type="text" placeholder="Name" name="name" id="name" value="{{name}}">
          </div>
          <div class="register-input-group d-flex flex-column mb-3">
            <label for="email" class="mb-1">
              <span class="require-mark" style="color: red;">*</span>
              電子信箱:</label>
            <input type="text" placeholder="Email" name="email" id="email" value="{{email}}">
          </div>
          <div class="register-input-group d-flex flex-column mb-3">
            <label for="password" class="mb-1">
              <span class="require-mark" style="color: red;">*</span>
              密碼:</label>
            <input type="password" placeholder="Password" name="password" id="password" value="{{password}}">
          </div>
          <div class="register-input-group d-flex flex-column mb-3">
            <label for="confirm-password" class="mb-1">
              <span class="require-mark" style="color: red;">*</span>
              確認密碼:</label>
            <input type="password" placeholder="Confirm Password" name="confirmPassword" id="confirm-password"
              value="{{confirmPassword}}">
          </div>
          <p class="tip">(<span class="require-mark" style="color: red;">*</span>為必填欄位)</p>
          <button type="submit" class="register-btn btn btn-major">Register</button>
        </div>
      </form>
    </div>
  </div>
</div>