<div class="container register-bar">
  <div class="register-bar-outer">
    <div class="register-bar-inner">
      <form action="/users/register" method="POST">
        <h4 class="mb-2">Register</h4>
        <div class="register-form">
          <div class="register-input-group d-flex flex-column mb-3">
            <label for="name" class="mb-1">使用者名稱:</label>
            <input type="text" placeholder="Name" name="name" id="name">
          </div>
          <div class="register-input-group d-flex flex-column mb-3">
            <label for="email" class="mb-1">電子信箱:</label>
            <input type="text" placeholder="Email" name="email" id="email">
          </div>
          <div class="register-input-group d-flex flex-column mb-3">
            <label for="password" class="mb-1">密碼:</label>
            <input type="password" placeholder="Password" name="password" id="password">
          </div>
          <div class="register-input-group d-flex flex-column mb-3">
            <label for="confirm-password" class="mb-1">確認密碼:</label>
            <input type="password" placeholder="Confirm Password" name="confirm-password" id="confirm-password">
          </div>
          <button type="submit" class="register-btn btn btn-major">Register</button>
        </div>
      </form>
    </div>
  </div>
</div>